<h1>Proyectos existentes</h1>
<%= link_to 'Nuevo Proyecto', new_project_path %>
<%= will_paginate%>
<% if @projects != nil%> 
    <table>
        <tr>
            <th>Titulo</th>
            <th>Area</th>
            <th>Descripción</th>
            <th>Problemática</th>
        </tr>

        <% @projects.each do |project|%>
            <tr>
                <%if (project.user == current_user) || current_user.admin? %>
                <td><%= project.titulo%></td>
                <td><%= project.area%></td>
                <td><%= project.descripcion%></td>
                <td><%= project.problematica%></td>
                <td><%= link_to 'Ver', project_path(project)%></td>
                <td><%= link_to 'Editar', edit_project_path(project) %></td>
                <td><%= link_to 'Eliminar',project_path(project),method: :delete, data: {confirm: '¿Estás seguro de que deseas eliminar el proyecto? Esta acción no se puede deshacer'}%></td>
                <td>Encargado: <%= project.user.nombre if( project.user) || current_user.admin? %></td>
                 <%end%>
            </tr>
        <% end %>
    </table>
<%end %>
<%= will_paginate%>
