        <%= f.text_area :descripcion %>
    </p>
    <p>
        <%= f.label :ubicacion %> 
        <%= f.text_field :ubicacion %>
    </p>
    <p>
        <%= f.label :voluntarios %> 
        <%= f.number_field :voluntarios %>
    </p>
    <p>
        <%= f.label :problematica %> 
        <%= f.text_field :problematica %>
    </p>
    <p>
        <%= f.label :atiende_num_personas %> 
        <%= f.number_field :atiende_num_personas %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>