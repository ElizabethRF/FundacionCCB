<%= form_for @project do |f| %>
<% if @project.errors.any? %>
    <div id="error_explanation">
        <h2>
        <%= pluralize(@project.errors.count,"errores")%><br>
            No se puede guardar el proyecto por las siguientes razones: 
        </h2>
        <ul>
            <% @project.errors.full_messages.each do |mensaje|%>
                <li><%= mensaje %></li>
            <% end %>
        </ul>
    </div>
<% end %>


<p>
        <%= f.label :titulo %> 
